# AutoDropshipper Production Environment Variables
# Copy this file to .env.production and fill in your values

# Django Settings
SECRET_KEY=your-secret-key-here-generate-with-django-get-random-secret-key
DJANGO_SETTINGS_MODULE=webapp.settings_prod

# Database Configuration
POSTGRES_DB=autodropshipper
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your-secure-password-here
POSTGRES_HOST=db

# Idealo Scraper Settings
SCRAPE_URL_IDEALO=https://www.idealo.de/preisvergleich/SubCategoryFilter/19116F1846262.html?sortKey=PRICE_TIME
MAX_PAGES_TO_SCRAPE=3
IS_HEADLESS_IDEALO=true
PAGE_LOAD_TIMEOUT=30
ELEMENT_WAIT_TIMEOUT=10

# eBay Scraper Settings
IS_HEADLESS_EBAY=true
MAX_BESTMATCH_ITEMS=10
MAX_LEASTMATCH_ITEMS=5
EBAY_MIN_PRICE=50

# Telegram Notifications (Optional)
TELEGRAM_BOT_TOKEN=your-telegram-bot-token-here
TELEGRAM_CHAT_ID=your-telegram-chat-id-here

# Profit Calculation
PROFIT_PERCENTAGE_BASELINE=25

# Application Settings
DEBUG=false